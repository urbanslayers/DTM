generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(cuid())
  username       String            @unique
  email          String            @unique
  password       String
  role           String            @default("user")
  credits        Int               @default(0)
  personalMobile String?
  displayName    String?
  firstName      String?
  lastName       String?
  fullName       String?           @default("")
  country        String?
  city           String?
  postcode       String?
  timezone       String?
  language       String?
  loyaltyTier    String?
  pointsBalance  Int?             @default(0)
  dateOfBirth    DateTime?
  gender         String?
  customFields   Json?            // Store user-specific custom variables
  createdAt      DateTime         @default(now())
  lastLogin      DateTime?
  isActive       Boolean          @default(true)
  apiUsage       ApiUsage[]
  contacts       Contact[]
  inboxMessages  InboxMessage[]
  mediaFiles     MediaFile[]
  templates      MessageTemplate[]
  messages       Message[]
  rules          Rule[]
  systemStatus   SystemStatus[]
  campaigns      Campaign[]

  @@map("users")
}

model Campaign {
  id          String    @id @default(cuid())
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  status      String    @default("draft") // draft, active, paused, completed
  variables   Json?     // campaign-level variables
  messages    Message[]
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("campaigns")
}

model Message {
  id             String    @id @default(cuid())
  userId         String
  to             String
  from           String?
  content        String
  type           String    @default("sms")
  status         String    @default("pending") // pending, sent, delivered, failed
  credits        Int       @default(0)
  isTemplate     Boolean   @default(false)
  createdAt      DateTime  @default(now())
  sentAt         DateTime?
  deliveredAt    DateTime?
  scheduledAt    DateTime?
  templateName   String?
  variablesUsed  Json?    // snapshot of variables used for this message
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign       Campaign? @relation(fields: [campaignId], references: [id])
  campaignId     String?
  template       MessageTemplate? @relation(fields: [templateId], references: [id])
  templateId     String?

  @@map("messages")
}

model Contact {
  id          String   @id @default(cuid())
  userId      String
  name        String
  phoneNumber String
  email       String?
  category    String   @default("personal")
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("contacts")
}

model MessageTemplate {
  id           String    @id @default(cuid())
  userId       String
  name         String
  content      String
  category     String    @default("personal")
  placeholders Json?     // list of variable placeholders used in template
  messages     Message[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("message_templates")
}

model Rule {
  id        String   @id @default(cuid())
  userId    String
  name      String
  condition String
  action    String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("rules")
}

model InboxMessage {
  id         String   @id @default(cuid())
  userId     String
  from       String
  to         String
  subject    String?
  content    String
  type       String   @default("sms")
  receivedAt DateTime @default(now())
  read       Boolean  @default(false)
  folder     String   @default("personal")
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("inbox_messages")
}

model MediaFile {
  id           String   @id @default(cuid())
  userId       String
  filename     String
  originalName String
  size         Int
  type         String
  url          String
  uploadedAt   DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("media_files")
}

model SystemStatus {
  id        String   @id @default(cuid())
  userId    String
  type      String
  message   String
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("system_status")
}

model ApiUsage {
  id           String   @id @default(cuid())
  userId       String?
  endpoint     String
  method       String
  statusCode   Int
  responseTime Int
  timestamp    DateTime @default(now())
  user         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_usage")
}

model ActiveSession {
  id           String   @id @default(cuid())
  userId       String   @unique
  lastActivity DateTime @default(now())

  @@map("active_sessions")
}
